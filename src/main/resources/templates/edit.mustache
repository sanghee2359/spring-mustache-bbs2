{{#article}}
    <form action="/articles/{{id}}/update" method="post">
        <input type="text" name="title" value="{{title}}" />
        <textarea rows="3" name="content">{{content}}</textarea>
        <input type="submit"/>
{{/article}}
    </form>
<a href="/articles/list" class="btn btn-primary" tabindex="-1" role="button" aria-disabled="true">List</a>
<a href="/articles/{{id}}" class="btn btn-primary" tabindex="-1" role="button" aria-disabled="true">Result</a>