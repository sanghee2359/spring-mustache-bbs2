{{>layouts/header}}

{{#article}}
    <form action="/articles/{{id}}/update" method="post">
        <input type="text" name="title" value="{{title}}" />
        <textarea rows="3" name="content" value="content">{{content}}</textarea>
        <button type="submit" class="btn btn-primary mb-3">Edit</button>
{{/article}}
</form>
<a href="/articles/list" class="btn btn-primary" tabindex="-1" role="button" aria-disabled="true">List</a>
<a href="/articles/{{id}}" class="btn btn-primary" tabindex="-1" role="button" aria-disabled="true">Confirm</a>

{{>layouts/footer}}