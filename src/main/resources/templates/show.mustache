{{>layouts/header}}
    <h5>이 페이지는 {{id}}의 show 페이지 입니다.</h5>
    <div class="card" style="width: 18rem;">
        {{#article}}
            <div class="card-body">
                <h5 class="card-title">{{title}}</h5>
                <h6 class="card-subtitle mb-2 text-muted">{{id}}</h6>
                <p class="card-text">{{content}}</p>
            </div>
        {{/article}}
    </div>
    <div>
        <a href="/articles/new">생성</a>
        <a href="/articles/">리스트</a>
    </div>
    <div>
        <a href="/articles/{{id}}/edit" class="btn btn-danger" >수정</a>
        <a href="/articles/{{id}}/delete" class="btn btn-primary">삭제</a>
    </div>
{{>layouts/footer}}